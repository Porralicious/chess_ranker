<div class="flex flex-col md:flex-row ">
  <div class="md:w-2/3 sm:w-full p-4">
    <div class="flex flex-row w-full justify-end">
      <div class="bg-gray-50 shadow rounded-lg p-4 mb-4 flex justify-end space-x-2 w-fit">
        <%= link_to "✏️", edit_member_path(member),
              class: "text-lg hover:scale-110 transition-transform", title: "Edit" %>

        <%= link_to "🗑️", member,
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
              class: "text-lg hover:scale-110 transition-transform", title: "Delete" %>
      </div>
    </div>
    <div id="<%= dom_id member %>" class="bg-white shadow rounded-lg p-6 mb-4">
      <dl class="divide-y divide-gray-200">
        <div class="py-3 flex justify-between">
          <dt class="text-sm font-medium text-gray-500">Name</dt>
          <dd class="text-sm text-gray-900"><%= member.name %></dd>
        </div>

        <div class="py-3 flex justify-between">
          <dt class="text-sm font-medium text-gray-500">Surname</dt>
          <dd class="text-sm text-gray-900"><%= member.surname %></dd>
        </div>

        <div class="py-3 flex justify-between">
          <dt class="text-sm font-medium text-gray-500">Email</dt>
          <dd class="text-sm text-gray-900"><%= member.email %></dd>
        </div>

        <div class="py-3 flex justify-between">
          <dt class="text-sm font-medium text-gray-500">Birthday</dt>
          <dd class="text-sm text-gray-900"><%= member.birthday %></dd>
        </div>

        <div class="py-3 flex justify-between">
          <dt class="text-sm font-medium text-gray-500">Games Played</dt>
          <dd class="text-sm text-gray-900"><%= member.number_of_club_games_played %></dd>
        </div>

        <div class="py-3 flex justify-between">
          <dt class="text-sm font-medium text-gray-500">Current Rank</dt>
          <dd class="text-sm text-gray-900 font-semibold"><%= member.current_rank %></dd>
        </div>
      </dl>
    </div>
  </div>
  <div class="md:w-1/3 sm:w-full mx-auto bg-white rounded-lg shadow-md border border-gray-200 p-4">
      <h3 class="text-xl font-bold mb-4 text-gray-800">Last 5 Matches</h3>

      <% if @recent_matches.any? %>
        <ul class="space-y-3">
          <% @recent_matches.each do |match| %>
            <li class="p-4 border rounded-lg bg-gray-50 hover:bg-gray-100 transition">
              <p>
                ♟️ <%= match.player_one.name %> vs <%= match.player_two.name %>
              </p>
              <p class="text-sm text-gray-600">
                🗓️ <%= match.created_at.strftime("%B %d, %Y") %>
              </p>
              <p class="text-sm">
                🏆 Result:
                <% if match.winner.present? %>
                  <% if match.winner_id == member.id %>
                  <span class="font-semibold text-green-700">Win</span>
                  <% else %>
                  <span class="font-semibold text-red-700">Loss</span>
                  <% end %>
                  
                <% else %>
                  🤝 <span class="italic text-gray-500">Draw</span>
                <% end %>
              </p>
              <%= link_to "View Match", match_path(match), class: "text-blue-600 hover:underline text-sm" %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-500 italic">No matches played yet.</p>
      <% end %>
  </div>
</div>





