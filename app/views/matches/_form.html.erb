<%= form_with(model: match, class: "space-y-6 w-1/2 md:w-full mx-auto bg-white p-6 rounded-lg shadow-md") do |form| %>
  <% if match.errors.any? %>
    <div class="bg-red-50 border border-red-300 text-red-700 px-4 py-3 rounded-lg">
      <h2 class="font-semibold mb-2">
        <%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:
      </h2>
      <ul class="list-disc pl-5">
        <% match.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :player_one_id, "Player One", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.collection_select :player_one_id, Member.order(:current_rank), :id, :name,
        {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 p-3" %>
  </div>

  <div>
    <%= form.label :player_two_id, "Player Two", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.collection_select :player_two_id, Member.order(:current_rank), :id, :name,
        {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 p-3" %>
  </div>

  <div>
    <%= form.label :winner_id, "Winner", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.collection_select :winner_id, Member.all, :id, :name,
        {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 p-3" %>
  </div>

  <div class="flex items-center space-x-4">
    <%= form.submit "Save Match", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg shadow" %>
    <%= link_to "Cancel", matches_path, class: "text-gray-600 hover:text-gray-900" %>
  </div>
<% end %>